<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        tools:context=".activity.RoundTextViewActivity">

        <com.xinzy.component.kotlin.widget.RadiusTextView
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:text="测试啦啦啦啦了"
            android:textColor="#666"
            app:borderColor="#FF8447"
            app:borderWidth="1dp"
            app:pressedBorderColor="#FF6621"
            app:pressedBorderWidth="1dp"
            app:pressedSolidColor="#9CC5F0"
            app:pressedTextColor="#F00"
            app:radius="8dp"
            app:solidColor="#0000" />

        <com.xinzy.component.kotlin.widget.RadiusButton
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="居中对齐"
            android:textColor="#666"
            app:borderColor="#FF8447"
            app:borderWidth="1dp"
            app:pressedBorderColor="#FF6621"
            app:pressedBorderWidth="1dp"
            app:pressedSolidColor="#9CC5F0"
            app:pressedTextColor="#F00"
            app:radius="8dp"
            app:solidColor="#0000" />

        <com.xinzy.component.kotlin.widget.RadiusButton
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="启用水波纹"
            android:textColor="#666"
            app:rippleEnabled="true"
            app:rippleColor="@color/colorAccent"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <com.xinzy.component.kotlin.widget.RadiusButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:text="左上"
                android:textColor="#666"
                app:rippleColor="@color/colorAccent"
                app:borderColor="#FF8447"
                app:borderWidth="1dp"
                app:pressedBorderColor="#FF6621"
                app:pressedBorderWidth="1dp"
                app:pressedSolidColor="#9CC5F0"
                app:pressedTextColor="#F00"
                app:radiusLT="8dp"/>

            <com.xinzy.component.kotlin.widget.RadiusButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="80dp"
                android:text="右上"
                android:textColor="#666"
                app:rippleColor="@color/colorAccent"
                app:borderColor="#FF8447"
                app:borderWidth="1dp"
                app:pressedBorderColor="#FF6621"
                app:pressedBorderWidth="1dp"
                app:pressedSolidColor="#9CC5F0"
                app:pressedTextColor="#F00"
                app:rippleEnabled="true"
                app:radiusRT="8dp"/>

            <com.xinzy.component.kotlin.widget.RadiusButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:text="左下"
                android:textColor="#666"
                app:rippleColor="@color/colorAccent"
                app:borderColor="#FF8447"
                app:borderWidth="1dp"
                app:radiusLB="8dp"/>

            <com.xinzy.component.kotlin.widget.RadiusButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="80dp"
                android:layout_marginTop="80dp"
                android:text="右下"
                android:textColor="#666"
                app:rippleColor="@color/colorAccent"
                app:borderColor="#FF8447"
                app:borderWidth="1dp"
                app:radiusRB="8dp" />
        </FrameLayout>

        <com.xinzy.component.kotlin.widget.RadiusButton
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:text="测试ripple"
            android:textColor="#666"
            android:layout_marginTop="12dp"
            app:rippleEnabled="true"
            app:rippleColor="@color/colorPrimaryDark"
            app:borderColor="#FF8447"
            app:borderWidth="1dp"
            app:solidColor="#FFF"
            app:pressedBorderColor="#FF6621"
            app:pressedBorderWidth="1dp"
            app:pressedSolidColor="#9CC5F0"
            app:pressedTextColor="#F00"
            app:radius="8dp"/>

    </LinearLayout>
</ScrollView>
